@model MySandwitchFactory.Web.UI.Models.HomeIndexViewModel

@{
    ViewBag.Title = "Index";
}

<h2>MySandwich Factory</h2>


<div id="SandwichList">
    
    <table>
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SandwichViewModel.SandwichName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SandwichViewModel.SandwichType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SandwichViewModel.Ingrediant)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SandwichViewModel.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SandwichViewModel.Rate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SandwichViewModel.Image)
                </th>
            </tr>
        </thead>
        
        <tbody>
            @foreach (var sm in Model.AllSandwichList.AllSandwich)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => sm.SandwichName).ToString().ToUpper()
                    </td>
                    <td>
                        @Html.DisplayFor(m => sm.SandwichType)
                    </td>
                    <td>
                        @Html.DisplayFor(m => sm.Ingrediant)
                    </td>
                    <td>
                        @Html.DisplayFor(m => sm.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(m => sm.Rate).ToString()
                    </td>
                    <td style="width: 100px; height: 100px;">
                        @*@Html.DisplayFor(m => sm.Image)*@
                        <img src="@Url.Content(sm.Image)" alt="Image" style="height:100px;width:100px;" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
